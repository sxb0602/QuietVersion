<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dp"/>
            <gradient
                android:centerColor="@color/quiet_version_progress_background"
                android:endColor="@color/quiet_version_progress_background"
                android:startColor="@color/quiet_version_progress_background"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dp"/>
                <gradient
                    android:angle="45"
                    android:endColor="@color/quiet_version_progress"
                    android:startColor="@color/quiet_version_progress"/>
            </shape>
        </clip>
    </item>

</layer-list>